{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "declaration": false,
    "strict": true,
    "lib": [
      "ES2019",
      "ES2020",
      "ES2021"
    ],
    "noEmit": true,
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "jsx": "preserve",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
